import java.util.*;
public class calculator{
    public static void main(String[] args){
        Scanner no = new Scanner(System.in);
        int a,b,result;
        char operator;
        System.out.print("Enter the first number: ");
        a = no.nextInt();
        System.out.print("Enter the operator: ");
        operator = no.next().charAt(0);
        System.out.print("Enter the second number: ");
        b = no.nextInt();
        switch(operator){
            case '+':
                result = a+b;
                System.out.println("Addition of Two number: " + result);
                break;
            case '-':
                result = a-b;
                System.out.println("Subtraction of two number: "+ result);
                break;
            case '*':
                result = a*b;
                System.out.println("Multiplication of two number: "+ result);
                break;
            case '/':
                result = a/b;
                System.out.println("Division of two number: "+ result);
                break;
            default:
                System.out.println("Enter the correct operator!!");
        }
    }
}
